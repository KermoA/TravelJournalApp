<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelJournalApp.Views.AddTravelPage"
             Title="Add Travel">
    <VerticalStackLayout Padding="20">
        <Label Text="Travel Name" />
        <Entry x:Name="TravelNameEntry" Placeholder="Enter travel name" />

        <Label Text="Description" />
        <Editor x:Name="DescriptionEditor" Placeholder="Enter description" />

        <Button Text="Save Travel"
                Clicked="OnSaveTravelClicked" 
                HorizontalOptions="Center" 
                Margin="0,20,0,0"/>

        <Label x:Name="StatusLabel" TextColor="Green" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
