<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!--main text color-->
    <Color x:Key="TextColor">#00525e</Color>
    
    <!--text color for buttons-->
    <Color x:Key="ButtonTextColor">white</Color>
    
    <!--button background color and dark theme header background color-->
    <Color x:Key="ButtonBackground">#00525e</Color>
    
    <!--whole page background colors-->
    <Color x:Key="BlueBG">#8fdecf</Color>
    <Color x:Key="YellowBG">#ece3b8</Color>
    
    <!--White and Black just in case-->
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>

    <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource BlueBG}"
                      Offset="0.1" />
        <GradientStop Color="{StaticResource YellowBG}"
                      Offset="0.6" />
    </LinearGradientBrush>

</ResourceDictionary>